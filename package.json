{
  "name": "starkey-core",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "postinstall": "git config core.hooksPath githooks &&       chmod -R +x githooks"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@types/node": "^22.13.4"
  }
}
